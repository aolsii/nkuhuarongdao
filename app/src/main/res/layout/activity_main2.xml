<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backd"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/myText2"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="横刀立马"
        android:gravity="center|bottom"
        android:textSize="100px"
        android:background="@drawable/d"
        android:textStyle="bold"
        android:textColor="#FFFFCC"
        app:layout_constraintBottom_toTopOf="@+id/HRD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <FrameLayout
        android:id="@+id/HRD"
        android:layout_width="400dp"
        android:layout_height="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myText2"
        app:layout_constraintBottom_toTopOf="@id/Text1">
        >

        <Button
            android:id="@+id/people1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bing" />

        <Button
            android:id="@+id/people2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bing" />

        <Button
            android:id="@+id/people3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bing" />

        <Button
            android:id="@+id/people4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bing" />

        <Button
            android:id="@+id/people5"
            android:layout_width="90dp"
            android:layout_height="180dp"
            android:background="@drawable/huang" />

        <Button
            android:id="@+id/people6"
            android:layout_width="90dp"
            android:layout_height="180dp"
            android:background="@drawable/ma" />

        <Button
            android:id="@+id/people7"
            android:layout_width="90dp"
            android:layout_height="180dp"
            android:background="@drawable/zhang" />

        <Button
            android:id="@+id/people8"
            android:layout_width="90dp"
            android:layout_height="180dp"
            android:background="@drawable/zhao" />

        <Button
            android:id="@+id/people9"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:background="@drawable/guan" />

        <Button
            android:id="@+id/people10"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/cao" />

    </FrameLayout>

    <TextView
        android:id="@+id/Text1"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="开始游戏"
        android:gravity="center|top"
        android:textSize="60px"
        android:textStyle="bold"
        android:textColor="#FFFFCC"
        app:layout_constraintTop_toBottomOf="@id/HRD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>


